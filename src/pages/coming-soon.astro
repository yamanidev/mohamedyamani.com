---
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout>
  <BaseHead
    title={`${SITE_TITLE} | Front end Web Developer`}
    description={SITE_DESCRIPTION}
    slot="meta"
  />
  <Fragment slot="main">
    <section class="mb-8">
      <h1 class="overflow-hidden pb-2 pt-4 text-5xl font-extrabold tracking-tight md:text-6xl">
        <span
          class="bg-gradient-to-br from-[#fb923c] via-[#f97316] to-[#ea580c] bg-clip-text text-transparent dark:from-primary-main dark:via-primary-main dark:to-primary-main">
          Coming soon!
        </span>
      </h1>
      <p class="pb-4 text-2xl">Fingers crossed I get this done soon.</p>
    </section>
  </Fragment>
</PageLayout>
